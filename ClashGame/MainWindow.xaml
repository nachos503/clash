<Window x:Class="ClashGame.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ClashGame"
        mc:Ignorable="d"
        Title="MainWindow" Height="1920" Width="1080">
    <Grid>
        <TextBox x:Name="outputTextBox"  IsReadOnly="True" HorizontalAlignment="Center" Margin="0,53,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="616" Height="311"/>
        <Button x:Name="ChooseBlueArmy" Click="ChooseBlueArmy_Click" Content="Синяя" HorizontalAlignment="Left" Height="26" Margin="406,398,0,0" VerticalAlignment="Top" Width="88"/>
        <Button x:Name="ChooseRedArmy" Click="ChooseRedArmy_Click" Content="Красная" HorizontalAlignment="Left" Height="26" Margin="586,398,0,0" VerticalAlignment="Top" Width="88"/>
        <Button x:Name="CreateArmy" Click="CreateArmy_Click" Content="Создать армии"  HorizontalAlignment="Center" Height="26" Margin="0,367,0,0" VerticalAlignment="Top" Width="Auto"/>
        <Button x:Name="Turn" Click="Turn_Click" Content="Атака"  HorizontalAlignment="Left" Height="26" Margin="941,260,0,0" VerticalAlignment="Top" Width="61"/>
        <Button x:Name="CancelTurn" Click="CancelTurn_Click" Content="Отмена хода"  HorizontalAlignment="Left" Height="26" Margin="990,182,0,0" VerticalAlignment="Top" Width="80"/>
        <Button x:Name="ToTheEnd" Click="ToTheEnd_Click" Content="Доиграть до конца"  HorizontalAlignment="Left" Height="26" Margin="917,338,0,0" VerticalAlignment="Top" Width="Auto"/>
        <Button x:Name="UseWizard" Click="UseWizard_Click" Content="Использовать мага"  HorizontalAlignment="Left" Height="26" Margin="873,53,0,0" VerticalAlignment="Top" Width="Auto"/>
        <Button x:Name="UseHealer" Click="UseHealer_Click" Content="Использовать лекаря"  HorizontalAlignment="Left" Height="26" Margin="873,94,0,0" VerticalAlignment="Top" Width="Auto"/>
        <Button x:Name="UseArcher" Click="UseArcher_Click" Content="Использовать лучников"  HorizontalAlignment="Left" Height="26" Margin="873,140,0,0" VerticalAlignment="Top" Width="Auto"/>

    </Grid>
</Window>
