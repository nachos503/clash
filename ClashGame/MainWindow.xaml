<Window x:Class="ClashGame.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ClashGame"
        mc:Ignorable="d"
        Title="MainWindow" Height="1080" Width="1920">
    <Canvas>
        <TextBox x:Name="outputTextBox" 
                 IsReadOnly="True" 
                 Width="616" 
                 Height="311" 
                 TextWrapping="Wrap" 
                 Canvas.Left="232" Canvas.Top="53"/>
        <Button x:Name="ChooseBlueArmy" 
                Click="ChooseBlueArmy_Click" 
                Content="Синяя" 
                Width="88" 
                Height="26" 
                Canvas.Left="402" Canvas.Top="406"/>
        <Button x:Name="ChooseRedArmy" 
                Click="ChooseRedArmy_Click" 
                Content="Красная" 
                Width="88" 
                Height="26" 
                Canvas.Left="586" Canvas.Top="406" RenderTransformOrigin="0.477,0.617" HorizontalAlignment="Center" VerticalAlignment="Top"/>
        <Button x:Name="CreateArmy" 
                Click="CreateArmy_Click" 
                Content="Создать армии" 
                Width="120" 
                Height="26" 
                Canvas.Left="480" Canvas.Top="372" RenderTransformOrigin="0.492,-0.306" HorizontalAlignment="Center" VerticalAlignment="Top"/>
        <Button x:Name="Turn" 
                Click="Turn_Click" 
                Content="Атака" 
                Width="61" 
                Height="26" 
                Canvas.Left="941" Canvas.Top="260"/>
        <Button x:Name="CancelTurn" 
                Click="CancelTurn_Click" 
                Content="Конец хода" 
                Width="80" 
                Height="26" 
                Canvas.Left="990" Canvas.Top="182"/>
        <Button x:Name="ToTheEnd" 
                Click="ToTheEnd_Click" 
                Content="Доиграть до конца" 
                Width="130" 
                Height="26" 
                Canvas.Left="917" Canvas.Top="338"/>
        <Button x:Name="UseWizard" 
                Click="UseWizard_Click" 
                Content="Использовать мага" 
                IsEnabled="False" 
                Width="120" 
                Height="26" 
                Canvas.Left="873" Canvas.Top="53"/>
        <Button x:Name="UseHealer" 
                Click="UseHealer_Click" 
                Content="Использовать лекаря" 
                IsEnabled="False" 
                Width="130" 
                Height="26" 
                Canvas.Left="873" Canvas.Top="94"/>
        <Button x:Name="UseArcher" 
                Click="UseArcher_Click" 
                Content="Использовать лучников" 
                IsEnabled="False" 
                Width="150" 
                Height="26" 
                Canvas.Left="873" Canvas.Top="140"/>
        <Button x:Name="UseGulyayGorod" 
                Click="GulyayGorodr_Click" 
                Content="Использовать стену" 
                IsEnabled="False" 
                Width="150" 
                Height="26" 
                Canvas.Left="1066" Canvas.Top="260" HorizontalAlignment="Left" VerticalAlignment="Center"/>
    </Canvas>
</Window>